<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/centro"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/colorAccent"
        android:layout_centerInParent="true"
        />
    <Button
        android:id="@+id/arriba"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@color/colorPrimary"
        android:layout_above="@id/centro"
        android:layout_centerHorizontal="true"
        android:layout_margin="32dp"
        />
    <Button
        android:id="@+id/abajo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@color/colorPrimary"
        android:layout_below="@id/centro"
        android:layout_centerHorizontal="true"
        android:layout_margin="32dp"
        />
    <Button
        android:id="@+id/derecha"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@color/colorPrimary"
        android:layout_toRightOf="@id/centro"
        android:layout_centerVertical="true"
        android:layout_margin="32dp"
        />
    <Button
        android:id="@+id/izquierda"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@color/colorPrimary"
        android:layout_toLeftOf="@id/centro"
        android:layout_centerVertical="true"
        android:layout_margin="32dp"
        />
    <Button

        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@color/colorPrimary"
        android:layout_toLeftOf="@id/centro"
        android:layout_above="@id/izquierda"
        android:layout_margin="16dp"
        />
    <Button

        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@color/colorPrimary"
        android:layout_toLeftOf="@id/centro"
        android:layout_below="@id/izquierda"
        android:layout_margin="16dp"
        />

    <Button

        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@color/colorPrimary"
        android:layout_toRightOf="@id/centro"
        android:layout_below="@id/izquierda"
        android:layout_margin="16dp"
        />
    <Button

        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@color/colorPrimary"
        android:layout_toRightOf="@id/centro"
        android:layout_above="@id/izquierda"
        android:layout_margin="16dp"
        />


</RelativeLayout>